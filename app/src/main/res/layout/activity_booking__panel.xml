<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking_Panel"
    android:background="@drawable/dffff">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"

        android:fontFamily="serif"
        android:text="Booking Page"
        android:textAlignment="center"
        android:textColor="#FF8F00"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:fontFamily="sans-serif"
        android:text="Station Details"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="21sp"
        android:textStyle="normal|bold" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/spinner"
        android:layout_marginStart="59dp"
        android:text="From"
        android:textAlignment="center"
        android:textColor="#FFCCBC"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="69dp"
        android:text="To"
        android:textAlignment="center"
        android:textColor="#FFCCBC"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginBottom="185dp"
        android:text="FARE"
        android:textAlignment="center"
        android:textColor="#CDDC39"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="161dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="171dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/edit1"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="331dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="273dp"
        android:background="#80D8FF" />

    <View
        android:id="@+id/divider2"
        android:layout_width="331dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="#80D8FF"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="111dp"
        android:layout_toStartOf="@+id/textView11"
        android:text="Travel Date"
        android:textAlignment="center"
        android:textColor="#CDDC39"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView18"
        android:layout_alignTop="@+id/textView19"
        android:background="@drawable/textviews"
        android:text="Choose Date"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button7"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:layout_toStartOf="@+id/textView18"
        android:background="@drawable/button"
        android:text="Book now"
        android:textColor="#070606"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button7"
        android:layout_marginEnd="59dp"
        android:background="@drawable/button"
        android:text="LOGout"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="215dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/divider"
        android:layout_alignParentTop="true"
        android:layout_marginTop="228dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/divider"
        android:layout_centerVertical="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:text="(Only Asansol Division)       (Only Asansol Division)       (Only Asansol Division)     (Only Asansol Division)"
        android:textColor="#ff4500"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>